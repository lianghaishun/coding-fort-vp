infoColor = #909399;
sucColor = #42b883;
errColor = #F56C6C;
warnColor = #e6a23c;
priColor = #409EFF;
infoBgColor = #e9e9eb;
sucBgColor = #f0f9eb;
errBgColor = #fef0f0;
warnBgColor = #fdf6ec;
priBgColor = #ecf5ff;

info, infob {
    color: infoColor;
}
suc, sucb {
    color: sucColor;
}

err, errb {
    color: errColor;
}

warn, warnb {
    color: warnColor;
}

pri, prib {
    color: priColor;
}

infob, sucb, errb, warnb, prib {
    font-weight: bold;
}

.page .content__default {
    max-width: 1000px;
}

bqs, bqe, bqw, bqp, bws, bwe, bww, bwp, bwsr, bwer, bwwr, bwpr {
    border-left: 0.2rem solid #dfe2e5;
    color: #cd8e8e;
    display: block;
    font-size: 1rem;
    line-height: 25px;
    margin: 1rem 0;
    padding: 0.5rem 1rem;
}

bqs, bws, bwsr {
    background-color: sucBgColor;
    border-color: sucColor;
    color: sucColor;
}

bqe, bwe, bwer {
    background-color: errBgColor;
    border-color: errColor;
    color: errColor;
}

bqw, bww, bwwr {
    background-color: warnBgColor;
    border-color: warnColor;
    color: warnColor;
}

bqp, bwp, bwpr {
    background-color: priBgColor;
    border-color: priColor;
    color: priColor;
}

bws::before, bwe::before, bww::before, bwp::before {
    content: '注意：';
    // display: block;
    font-weight: bold;
}

bwsr::before, bwer::before, bwwr::before, bwpr::before {
    border-bottom: 1px solid;
    content: '注意：';
    display: block;
    font-size: 18px;
    font-weight: bold;
    margin-bottom: 10px;
    padding-bottom: 10px;
}

bws::before, bwsr::before {
    content: '结论：';
}

bww::before, bwwr::before {
    content: '注意：';
}

bwp::before, bwpr::before {
    content: '记录：';
}

