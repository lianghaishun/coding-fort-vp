itv {
    background-color: errBgColor;
    border-left: 0.2rem solid errColor;
    color: #cd8e8e;
    display: block;
    font-size: 1rem;
    line-height: 25px;
    margin: 1rem 0;
    padding: 0.5rem 1rem;
}

itv itq {
    color: errColor;
    display: block;
    font-weight: bold;
}

itv itq::before {
    content: '[面试题] ';
}

itv itq::after {
    background-color: errColor;
    content: '';
    display: block;
    height: 1px;
    margin: 5px 0;
    width: 100%;
}

itv ita {
    color: priColor;
    display: block;
}

itv ita::before {
    content: '[参考题解] ';
    display: block;
    font-weight: bold;
}